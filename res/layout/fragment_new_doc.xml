<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white"
              android:tag="input" android:clickable="false" android:paddingLeft="@dimen/corners"
              android:paddingRight="@dimen/corners" android:focusable="true">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Весовой Документ №"
                android:id="@+id/textView2" android:gravity="center" android:textSize="@dimen/text_medium"
                android:textColor="@color/text"/>
        <TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:text="0" android:id="@+id/textView7" android:gravity="center"
                  android:textSize="@dimen/text_medium" android:textColor="@color/text"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата"
                android:id="@+id/textView3" android:gravity="center"
                android:textColor="@color/text"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.10.2015"
                android:id="@+id/textView5" android:layout_weight="1" android:gravity="center"
                android:textColor="@color/text"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:05:55"
                android:id="@+id/textView6" android:layout_weight="1" android:gravity="center"
                android:textColor="@color/text"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Контакт"
                android:id="@+id/textView4" android:textColor="@color/text" android:gravity="center"/>
        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/spinnerVendor" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="@dimen/padding" android:background="@color/background"
            />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Общая Тара"
                android:id="@+id/textView7" android:textSize="@dimen/text_medium"
                android:gravity="left|center" android:textColor="@color/text"/>-->
        <CheckedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxTape"
                android:text="Общая тара"
                android:checked="false"
                android:textColor="@color/text"
                android:checkMark="?android:attr/textCheckMark"
                android:textSize="@dimen/text_small" android:gravity="left|center" android:clickable="true"
                android:layout_weight="1"/>
        <!--<TextView
                android:id="@android:id/text1"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:ellipsize="marquee"
                android:singleLine="true" android:text="Общая тара"/>

        <CheckBox
                android:id="@android:id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:duplicateParentState="true"
                android:focusable="false" />-->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:id="@+id/defaultTape"
                android:layout_weight="1" android:padding="@dimen/padding" android:visibility="gone">
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/editText" android:textSize="@dimen/text_medium"
                    android:text="1200" android:gravity="center|right" android:layout_weight="1"
                    android:background="@drawable/round_edit" android:layout_margin="@dimen/padding"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageButton2" android:src="@drawable/ic_action_zero"
                    android:layout_margin="@dimen/padding" android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="@dimen/padding" android:background="@color/background"
            />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <!--<TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Авто сумма"
                  android:id="@+id/textView8" android:textSize="@dimen/text_medium" android:gravity="left|center"
                  android:textColor="@color/text" android:layout_weight="1"/>-->
        <CheckedTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBoxAutoSum"
                android:text="Авто сумма"
                android:textColor="@color/text"
                android:checkMark="?android:attr/textCheckMark"
                android:checked="false" android:gravity="left|center_vertical"
                android:layout_gravity="right" android:clickable="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="@dimen/padding" android:background="@color/background"
            />
</LinearLayout>